<ul class="nav nav-tabs pagination" role="tablist">
  <li class="nav-item">
    <a class="nav-link btn btn-outline-success active" href="#informacoes" role="tab" data-toggle="tab">Informações gerais</a>
  </li>

  <li class="nav-item">
    <a class="endereco_tab nav-link btn btn-outline-success" href="#endereco" role="tab" data-toggle="tab">Endereço do jogo</a>
  </li>        
</ul>


<%= simple_form_for(jogo) do |f| %>
  <div class="form-inputs">
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="informacoes">
        <%= f.input :clube_id, collection: @clubes.collect { |clube| [clube.nome, clube.id] }, label: "Escolha um clube", required: "required", autofocus: true, label_html: { class: "text-success" } %>
        <%= f.input :data, label: "Data do jogo", required: "required", label_html: { class: "text-success" } %>
        <%= f.input :horario, label: "Horário do jogo", label_html: { class: "text-success" }, input_html: { class: "horario" } %>
        <% if @jogo.campo_adversario %>
          <%= f.input :campo_adversario, label: "Local: campo do adversário? ", label_html: { class: "text-success" }, input_html: { checked: true, class: "campo" } %>
        <% else %>
          <%= f.input :campo_adversario, label: "Local: campo do adversário? ", label_html: { class: "text-success" }, input_html: { class: "campo" } %>
        <% end %>
      </div>

      <div role="tabpanel" class="tab-pane" id="endereco">
          <%= f.input :cep, label: "CEP: ", label_html: { class: "text-success" }, input_html: { class: "cep" } %>
          <%= f.input :estado, label: "Estado: ", label_html: { class: "text-success" } %>
          <%= f.input :cidade, label: "Cidade: ", label_html: { class: "text-success" } %>
          <%= f.input :bairro, label: "Bairro: ", label_html: { class: "text-success" } %>
          <%= f.input :rua, label: "Rua: ", label_html: { class: "text-success" } %>
          <%= f.input :numero, label: "Número: ", label_html: { class: "text-success" } %>
      </div>
    </div>
  </div>

  <div class="actions row">
    <div class="ml-auto col-auto mr-auto">
      <%= link_to 'Voltar', jogos_path, class: "btn btn-danger" %>
      <%= f.submit "Salvar", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
