<h1>
  <%= @associado.nome %>
</h1>

<br>

<!-- Tab header -->
<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" href="#info_geral" role="tab" data-toggle="tab">Informações gerais</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#contato" role="tab" data-toggle="tab">Contato</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#endereco" role="tab" data-toggle="tab">Endereço</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#observacao" role="tab" data-toggle="tab">Observações</a>
  </li>
</ul>

<!-- Tab Body -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active in" id="info_geral">
    <p>
      <strong>Data nascimento:</strong>
      <%= @associado.data_nascimento %>
    </p>

    <p>
      <strong>Local nascimento:</strong>
      <%= @associado.local_nascimento %>
    </p>

    <p>
      <strong>Rg:</strong>
      <%= @associado.rg %>
    </p>

    <p>
      <strong>Cpf:</strong>
      <%= @associado.cpf %>
    </p>

    <p>
      <strong>Prato preferido:</strong>
      <%= @associado.prato_preferido %>
    </p>
  </div>
  <div role="tabpanel" class="tab-pane fade" id="contato">
    <p>
      <strong>Email:</strong>
      <%= @associado.email %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @associado.telefone %>
    </p>
  </div>
  <div role="tabpanel" class="tab-pane fade" id="endereco">
    <p>
      <strong>Cep:</strong>
      <%= @associado.cep %>
    </p>

    <p>
      <strong>Cidade:</strong>
      <%= @associado.cidade %>
    </p>

    <p>
      <strong>Estado:</strong>
      <%= @associado.estado %>
    </p>

    <p>
      <strong>Bairro:</strong>
      <%= @associado.bairro %>
    </p>

    <p>
      <strong>Rua:</strong>
      <%= @associado.rua %>
    </p>

    <p>
      <strong>Numero:</strong>
      <%= @associado.numero %>
    </p>
  </div>
  <div role="tabpanel" class="tab-pane fade" id="observacao">
    <p>
      <strong>Observacoes:</strong>
      <%= @associado.observacoes %>
    </p>
  </div>
</div>
<hr/>

<%= link_to 'Edit', edit_associado_path(@associado) %> |
<%= link_to 'Back', associados_path %>

<footer><p id="notice"><%= notice %></p></footer>
