<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Aniversariantes</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
	<% if !@associados[0].nil? %>
		<p class="text-center mb-0">
			<b class="h3">Associados</b>
		</p>

		<table class="table table-striped table-bordered">
			<tr>
				<th>Nome</th>
				<th>Aniversário</th>
				<th>E-mail</th>
				<th>Telefone</th>
			</tr>

			<% @associados.each do |a| %>
				<% if !a.data_nascimento.nil? and a.data_nascimento != "" %>
					<tr>
						<td><%= a.nome %></td>
						<td><%= a.data_nascimento.strftime("%d/%m/%Y") %></td>
						<td><%= a.email %></td>
						<td><%= a.telefone %></td>
					</tr>
				<% end %>
			<% end %>
		</table>
	<% end %>

	<% if !@parentes[0].nil? %>
		<p class="text-center mb-0">
			<b class="h3">Parentes</b>
		</p>

		<table class="table table-striped table-bordered">
			<tr>
				<th>Nome</th>
				<th>Aniversário</th>
				<th>Parentesco</th>
				<th>Parente</th>
			</tr>
			
			<% @parentes.each do |a| %>
				<% if !a.data_nascimento.nil? and a.data_nascimento != "" %>
					<tr>
						<td><%= a.nome %></td>
						<td><%= a.data_nascimento.strftime("%d/%m/%Y") %></td>
						<td><%= a.parentesco %></td>
						<td><%= a.associado.nome %></td>
					</tr>
				<% end %>
			<% end %>
		</table>
	<% end %>

	<% if !@clubes[0].nil? %>
		<p class="text-center mb-0">
			<b class="h3">Clubes</b>
		</p>

		<table class="table table-striped table-bordered">
			<tr>
				<th>Nome</th>
				<th>Aniversário</th>
				<th>Telefone</th>
				<th>Contato</th>
			</tr>
			
			<% @clubes.each do |a| %>
				<% if !a.data_fundacao.nil? and a.data_fundacao != "" %>
					<tr>
						<td><%= a.nome %></td>
						<td><%= a.data_fundacao.strftime("%d/%m/%Y") %></td>
						<td><%= a.telefone_clube %></td>
						<td><%= a.telefone_contato %></td>
					</tr>
				<% end %>
			<% end %>
		</table>
	<% end %>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</html>
