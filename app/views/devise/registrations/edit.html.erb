<section>
  <div class="row mt-3">
    <div class="col-11 mx-auto form-associado shadow-lg px-4 py-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h1 class="text-center text-success">
          Perfil
        </h1>
        
        <%= devise_error_messages! %>

        <div class="row no-gutters">
          <div class="col-12">
            <%= f.label :email, "E-mail:", class: "text-success mb-0" %>
            <%= f.email_field :email, class: "form-control btn-sm", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="row no-gutters mt-2">
          <div class="col-12">
            <%= f.label :password, "Nova senha:", class: "text-success mb-0" %> <small class="text-muted">(Deixe em branco caso não queira alterar)</small>
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
            <% if @minimum_password_length %>
              <small class="text-muted">Mínimo de <%= @minimum_password_length %> caracteres</small>
            <% end %>
          </div>
        </div>

        <div class="row no-gutters mt-2">
          <div class="col-12">
            <%= f.label :password_confirmation, "Confirmar nova senha:", class: "text-success mb-0" %> <small class="text-muted">(Deixe em branco caso não queira alterar)</small>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="row no-gutters mt-2">
          <div class="col-12">
            <%= f.label :current_password, "Senha atual:", class: "text-success mb-0" %> <small class="text-muted">(Precisamos de sua senha atual para confirmar as alterações)</small>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="actions text-center mt-3">
          <div class="row">
            <div class="col-auto">
              <%= link_to "Voltar", :back, class: "btn btn-danger" %>
            </div>
            <div class="col-auto ml-auto">
              <%= f.submit "Salvar alterações", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
